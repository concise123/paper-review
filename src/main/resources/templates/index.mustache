{{>layout/header}}

<div class="col-md-12">
    <h3>게시글 목록</h3>
    <table class="table table-horizontal table-bordered">
        <thead class="thread-strong">
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>등록일시</th>
        </tr>
        </thead>
        <tbody id="tbody">
            {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{createdAt}}</td>
            </tr>
            {{/posts}}
        </tbody>
    </table>
    {{^posts}}
        <p style="text-align: center;">게시글이 없습니다.</p>
    {{/posts}}
    <a href="/posts/create" role="button" class="btn btn-primary" style="float: right">등록</a>
</div>

{{>layout/footer}}
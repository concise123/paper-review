{{>layout/header}}

<div class="col-md-12">
    <h3>회원 목록</h3>
    <table class="table table-horizontal table-bordered">
        <thead class="thread-strong">
        <tr>
            <th>이메일 주소</th>
            <th>등록 아이디</th>
            <th>역할</th>
            <th>등록일시</th>
            <th>삭제</th>
        </tr>
        </thead>
        <tbody id="tbody">
            {{#users}}
            <tr id="{{email}}/{{registrationId}}">
                <td>{{email}}</td>
                <td>{{registrationId}}</td>
                <td>
                    <select class="select-update-user-role" id="select-{{email}}/{{registrationId}}" role="{{role.name}}">
                        <option value="USER">USER</option>
                        <option value="ADMIN">ADMIN</option>

                    </select>
                </td>
                <td>{{createdAt}}</td>
                <td>
                    <button type="button" class="btn btn-danger btn-delete-user">삭제</button>
                </td>
            </tr>
            {{/users}}
        </tbody>
    </table>
</div>

{{>layout/footer}}

